datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String
  location  String?
  intent    String?
  createdAt DateTime   @default(now())
  datePlans DatePlan[]
}

model DatePlan {
  id        String   @id @default(uuid())
  planJson  Json
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String
}
